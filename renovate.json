{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
    "workarounds:all",
    ":ignoreUnstable",
    ":ignoreModulesAndTests",
    ":prImmediately",
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone",
    ":automergeDisabled",
    ":updateNotScheduled"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "timezone": "Europe/Berlin",
  "schedule": [
    "after 8am every weekday",
    "before 10pm every weekday"
  ],
  "kubernetes": {
    "fileMatch": [
      "^bases(.*\/).+\\.yaml$",
      "^kustomizations/bases(.*\/).+\\.yaml$"
    ]
  },
  "kustomize": {
    "fileMatch": [
      "^bases(.*\/)kustomization\\.yaml$",
      "^kustomizations/bases(.*\/)kustomization\\.yaml$"
    ]
  }
}
